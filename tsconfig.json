{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "cypress", "web-build", "dist"],
  "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx"]
}
